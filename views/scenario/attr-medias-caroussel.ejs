<div class="slideshow">
	<ul>
<% for(var i=0; i< data.step.medias.length; i++) { %>
		<li>
			<img id="image1" src="http://<%= data.config.server.host + ':' + data.config.server.port +  data.config.app.mediaPath + '/' +data.step.scenarioMediaPath + data.step.medias[i] %>" width="350" height="300"/>
		</li>
<% } %>
	</ul>
</div>
<style>
.slideshow {
   width: 350px;
   height: 300px;
   overflow: hidden;
   border: 3px solid #F2F2F2;
}

.slideshow ul {
    /* <%=data.step.medias.length%> images donc <%=data.step.medias.length%> x 100% */
   width: <%=data.step.medias.length%>00%;
   height: 300px;
   padding:0; margin:0;
   list-style: none;
}
.slideshow li {
   float: left;
}
</style>

<script type="text/javascript">
$(document).ready(function(){
  setInterval(function(){  
    $(".slideshow ul li:first-child").animate({"margin-left": -350}, 800, function(){  
        $(this).css("margin-left",0).appendTo(".slideshow ul");  
    });  
  }, 3500);  
});
</script>