
<style>
	/*  Template matching capsule */
	.critere {
	    color : black;
	    margin-bottom: 10%;
	 }

	.matching-img {
	    height: 100px;
	    margin: 20px;
	}

	.card, .card img {
	    display:inline;
	}

	.matching-on {
	    background-color: green;
	}
</style>

<div class="row txt">
	<div class="col-lg-5">
	  <img src="/medias/capsule/capsule-biere-bouteille.jpg" />
	</div>
	<div class="col-lg-2">
	  <div class="row">
	  	<button id="Forme" class="critere btn btn-block">Forme</button>
	  </div>
	  <div class="row">
	  	<button id="Matiere" class="critere btn btn-block">Matériau métal</button>
	  </div>
	  <div class="row">
	  	<button id="Dimensions" class="critere btn btn-block">Dimensions petites</button>
	  </div>
	  <div class="row">
	  	<button id="Decor" class="critere btn btn-block">Décor crénelé</button>
	  </div>
	  <div class="row">
	  	<button id="Inscription" class="critere btn btn-block">Inscription</button>
	  </div>
	</div>
	<div class="col-lg-5">

	    <div class="cardcontainer list">
	      <ul class="cardlist">
			<li class="card">
				<img class="matching-img" src="/medias/capsule/plat-a-tarte.jpg" id="plat-a-tarte" />
			</li>
			<li class="card">
				<img class="matching-img" src="/medias/capsule/plat-a-tarte-verre.jpg" id="plat-a-tarte-verre" />
			</li>
			<li class="card">
				<img class="matching-img" src="/medias/capsule/coquillage.jpg" id="coquillage" />
			</li>
			<li class="card">
				<img class="matching-img" src="/medias/capsule/moule-charlotte.jpg" id="moule-charlotte" />
			</li>
			<li class="card">
				<img class="matching-img" src="/medias/capsule/roulette.jpg" id="roulette" />
			</li>
			<li class="card">
				<img class="matching-img" src="/medias/capsule/pignon-vélo.jpg" id="pignon" />
			</li>
			<li class="card">
				<img class="matching-img" src="/medias/capsule/boucles-d-oreilles.jpg" id="boucles" />
			</li>
	      </ul>
	    </div>

	</div>
</div>

<script type="text/javascript">
	$(document).ready(function(){
		// Init
		$('.critere').removeClass("matching-on");

		// Highlighting element when matching.
		function highlight(e) {
			e.fadeOut(250).addClass("matching-on").fadeIn(500);
		}

		// click listener on all matching buttons
		$('.matching-img').on('click', function(){
			$('.critere').removeClass("matching-on");

			switch ($(this).attr("id")) {
				
				case "plat-a-tarte" :
					highlight($('#Forme'));
					highlight($('#Matiere'));
					highlight($('#Decor'));
					highlight($('#Inscription'));
					break;
				
				case "plat-a-tarte-verre" :
					highlight($('#Forme'));
					highlight($('#Decor'));
					break;
				
				case "coquillage" :
					highlight($('#Decor'));
					highlight($('#Dimensions'));
					break;
				
				case "moule-charlotte" :
					highlight($('#Forme'));
					highlight($('#Matiere'));
					highlight($('#Decor'));
					break;

				case "roulette" :
					highlight($('#Matiere'));
					highlight($('#Dimensions'));
					highlight($('#Decor'));
					break;

				case "pignon" :
					highlight($('#Decor'));
					highlight($('#Matiere'));
					highlight($('#Dimensions'));
					break;

				case "boucles" :
					highlight($('#Forme'));
					highlight($('#Matiere'));
					highlight($('#Dimensions'));
					highlight($('#Decor'));
					highlight($('#Inscription'));
					break;
			}
		});

	});

</script>
